<%= form_for(@portfolio_item) do |form| %>

  <% if @portfolio_item.errors.any? %>
    <% @portfolio_item.errors.full_messages.each do |error| %>
      <%= js add_gritter(error, title: "", sticky: false) %>
    <% end %>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, id: :blog_title, class: 'form-action' %>
      </div>

      <div class="form-group">
        <%= form.label :subtitle %>
        <%= form.text_field :subtitle, id: :blog_title, class: 'form-action' %>
      </div>

      <div class="form-group"> 
        <label class="btn btn-primary">
          Upload a main image <%= form.file_field :main_image, style: 'display:none;' %>
        </label>
      </div>

      <div class="form-group"> 
        <label class="btn btn-primary">
          Upload a thumb image <%= form.file_field :thumb_image, style: 'display:none;' %>
        </label>
      </div>
    </div>

    <div class="col-md-6">
      <div class="form-group">
        <%= form.label :body %>
        <%= form.text_area :body, id: :blog_body, class: 'form-action', rows: 10 %>
      </div>
    </div>
  </div>

  <hr> 
  
  <div class="col-md-12">
    <h2>Technologies Used:</h2>
    <div>
      <%= form.fields_for :technologies do |technology_form| %>
        <%= render 'technology_fields', f: technology_form %>
      <% end %> 

      <div>
        <%= link_to_add_association 'Add Technology', form, :technologies %>
      </div>
    </div>
  </div>


  <div class="form-group">
    <%= form.submit 'Submit', class: 'btn btn-primary form-action btn-block' %>
  </div>
<% end %>
