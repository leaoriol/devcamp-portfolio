<h1>Create a new portfolio item</h1>

<%= form_for(@portfolio_item) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :blog_title %>
  </div>

  <div class="field">
    <%= form.label :subtitle %>
    <%= form.text_field :subtitle, id: :blog_title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, id: :blog_body %>
  </div>

  <ul>
    <%= form.fields_for :technologies do |technology| %>
      <li>
        <%= technology.label :name %>
        <%= technology.text_field :name %>
      </li>
    <% end %> 
  </ul>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
